server:
  # extraVolumes:
  # - type: secret
  #   name: vault-storage-config
  #   path: null

  # extraArgs: -config=/vault/userconfig/vault-storage-config/config.hcl

  ingress:
    enabled: true
    annotations: 
      kubernetes.io/ingress.class: vault
      cert-manager.io/cluster-issuer: letsencrypt-prod
    hosts:
      - host: {{ vault_fqdn }}
        paths:
          - /

    tls: 
    - secretName: vault-tls
      hosts:
        - {{ vault_fqdn }}

  standalone:
    enabled: "false"

  ha:
    enabled: true
    replicas: 3

    raft:
      enabled: true
# Vault UI
ui:
  enabled: true
